<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:clickable="false"
    android:orientation="vertical"
    android:padding="15dp">

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/sprn_selectbrand"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:minWidth="120dp"
        android:padding="5dp" />

    <RelativeLayout
        android:id="@+id/date_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/sprn_selectmonth"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:entries="@array/months"
            android:padding="5dp" />

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/sprn_selectmonth"
            android:padding="5dp"
            android:text="@string/select_offers_for_the_period"
            android:textSize="20sp" />
    </RelativeLayout>


    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/sprn_selectschemes"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/lbl_calculator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:padding="5dp"
        android:text="Scheme Calculator"
        android:textSize="20sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Add"
        android:textColor="@android:color/white"
        android:visibility="gone" />


    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Get Summary"
        android:textColor="@android:color/white"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lst_schemes"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:background="#eeeeee"
        android:layout_height="wrap_content"
        android:padding="5dp" />




</LinearLayout>
