<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:layout_margin="10dp"
    android:padding="10dp">

    <!--<ImageView
        android:id="@+id/img2"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:src="@drawable/ic_record_button"
        android:layout_margin="10dp"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/platformName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Platform Name"
            android:layout_weight="1"
            android:textSize="@dimen/mediumtextSize"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/platformPrice"
                android:textSize="@dimen/mediumtextSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:layout_marginLeft="10sp"
                android:textStyle="bold"
                android:text="Platform Price"/>

            <TextView
                android:id="@+id/platformInfo"
                android:textSize="@dimen/smalltextSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:layout_marginLeft="10sp"
                android:text="Platform Price"/>

        </LinearLayout>

        <Button
            android:id="@+id/platformToStores"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="@color/blue"
            android:text="Go to Store"
            android:textSize="@dimen/smalltextSize"
            android:layout_marginLeft="10sp"/>

    </LinearLayout>

</LinearLayout>
