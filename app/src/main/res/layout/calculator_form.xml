<?xml version="1.0" encoding="utf-8"?><ScrollView xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:layout_margin="8dp"    android:background="@android:color/white"    android:orientation="vertical">    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="wrap_content">        <TextView            android:id="@+id/lbl_cateogry"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginLeft="10dp"            android:padding="5dp"            android:text="Category" />        <android.support.v7.widget.AppCompatSpinner            android:id="@+id/sprn_category"            android:layout_width="200dp"            android:layout_height="wrap_content"            android:layout_alignLeft="@+id/rg"            android:layout_toRightOf="@+id/lbl_cateogry"            android:minWidth="120dp"            android:padding="5dp" />        <TextView            android:id="@+id/lbl_model"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginLeft="10dp"            android:layout_below="@+id/lbl_cateogry"            android:padding="5dp"            android:text="Model" />        <android.support.v7.widget.AppCompatSpinner            android:id="@+id/sprn_model"            android:layout_width="200dp"            android:layout_height="wrap_content"            android:layout_alignLeft="@+id/rg"            android:layout_marginTop="3dp"            android:layout_below="@+id/sprn_category"            android:layout_toRightOf="@+id/lbl_model"            android:minWidth="120dp"            android:padding="5dp" />        <TextView            android:id="@+id/lbl_dp"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignLeft="@+id/lbl_model"            android:layout_below="@+id/sprn_model"            android:layout_marginRight="5dp"            android:layout_marginTop="10dp"            android:padding="5dp"            android:text="Dealer Price" />        <RadioGroup            android:id="@+id/rg"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_alignBottom="@+id/lbl_dp"            android:layout_alignTop="@+id/lbl_dp"            android:layout_below="@+id/sprn_model"            android:layout_toRightOf="@+id/lbl_dp"            android:orientation="horizontal">            <RadioButton                android:id="@+id/rb_withvat"                android:checked="true"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="With VAT" />            <RadioButton                android:id="@+id/lrb_withoutvat"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginLeft="3dp"                android:text="Without VAT" />        </RadioGroup>        <android.support.design.widget.TextInputLayout            android:id="@+id/lbl_do"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_alignLeft="@+id/lbl_dp"            android:layout_below="@+id/lbl_dp">            <AutoCompleteTextView                android:id="@+id/edt_dp"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:imeOptions="actionNext"                android:inputType="number"                android:maxLines="1"                android:singleLine="true" />        </android.support.design.widget.TextInputLayout>        <android.support.design.widget.TextInputLayout            android:id="@+id/lbl_target"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_alignLeft="@+id/lbl_dp"            android:layout_below="@+id/lbl_do">            <AutoCompleteTextView                android:id="@+id/edt_target"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:hint="@string/prompt_target"                android:imeOptions="actionNext"                android:inputType="number"                android:maxLines="1"                 />        </android.support.design.widget.TextInputLayout>        <android.support.design.widget.TextInputLayout            android:id="@+id/lbl_quantity"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_alignLeft="@+id/lbl_dp"            android:layout_below="@+id/lbl_target">            <AutoCompleteTextView                android:id="@+id/edt_quantity"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:hint="@string/prompt_quantity"                android:imeOptions="actionNext"                android:inputType="number"                android:maxLines="1"                />        </android.support.design.widget.TextInputLayout>        <android.support.design.widget.TextInputLayout            android:id="@+id/lbl_value"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_alignLeft="@+id/lbl_dp"            android:layout_below="@+id/lbl_quantity">            <AutoCompleteTextView                android:id="@+id/edt_value"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:hint="Value"                android:imeOptions="actionNext"                android:inputType="number"                android:maxLines="1"                android:singleLine="true" />        </android.support.design.widget.TextInputLayout>        <TextView            android:id="@+id/lbl_scheme"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignLeft="@+id/lbl_model"            android:layout_below="@+id/lbl_value"            android:layout_marginRight="5dp"            android:layout_marginTop="10dp"            android:padding="5dp"            android:text="Scheme" />        <RadioGroup            android:id="@+id/rg_scheme"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_alignBottom="@+id/lbl_scheme"            android:layout_alignTop="@+id/lbl_scheme"            android:layout_below="@+id/lbl_value"            android:layout_toRightOf="@+id/lbl_scheme"            android:orientation="horizontal">            <RadioButton                android:id="@+id/rb_perhandset"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:checked="true"                android:text="Per hand Set" />            <RadioButton                android:id="@+id/rb_percent"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginLeft="3dp"                android:text="@string/percent" />        </RadioGroup>        <android.support.design.widget.TextInputLayout            android:id="@+id/lbl_selected_scheme"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_alignLeft="@+id/lbl_dp"            android:layout_below="@+id/lbl_scheme">            <AutoCompleteTextView                android:id="@+id/edt_selected_scheme"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:imeOptions="actionNext"                android:inputType="number"                android:maxLines="1"                android:singleLine="true" />        </android.support.design.widget.TextInputLayout>        <android.support.design.widget.TextInputLayout            android:id="@+id/lbl_calculated_scheme"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_alignLeft="@+id/lbl_dp"            android:layout_below="@+id/lbl_selected_scheme">            <AutoCompleteTextView                android:id="@+id/edt_calulated_scheme"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:hint="@string/incentive_amount"                android:imeOptions="actionNext"                android:inputType="number"                android:maxLines="1"                android:singleLine="true" />        </android.support.design.widget.TextInputLayout>        <Button            android:id="@+id/btn_add"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_below="@+id/lbl_calculated_scheme"            android:layout_margin="5dp"            android:text="Add"            android:layout_centerHorizontal="true"            android:textColor="@android:color/white"            android:visibility="visible" />    </RelativeLayout></ScrollView>