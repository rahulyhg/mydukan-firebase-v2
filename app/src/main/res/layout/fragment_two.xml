<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragments.TwoFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/adView_myNetwork_two">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/suggestingTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Suggested Profile: "
                android:layout_alignParentTop="true"
                android:padding="6dp"
                android:visibility="gone"
                android:textColor="@color/orange_one"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:textSize="@dimen/mediumtextSize_1"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/contacts_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_below="@id/suggestingTitle"
                android:layout_marginTop="5dp"/>

            <View
                android:id="@+id/viewDivider"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="4dp"
                android:visibility="gone"
                android:layout_below="@id/contacts_rv"
                android:background="@color/black"/>

            <LinearLayout
                android:layout_below="@+id/viewDivider"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/container_MyNetwork"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <android.support.v7.widget.RecyclerView
                        android:padding="5dp"
                        android:clipToPadding="false"
                        android:id="@+id/rv_list_feed"
                        android:nestedScrollingEnabled="false"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <ProgressBar
                        android:id="@+id/progres_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center" />

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView_myNetwork_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        ads:adSize="BANNER"
        android:layout_alignParentBottom="true"
        ads:adUnitId="@string/banner_myNetwork_ad_unit_id" />

</RelativeLayout>
