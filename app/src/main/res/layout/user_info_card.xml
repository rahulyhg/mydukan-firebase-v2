<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
   >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#f0f0f0"
        android:orientation="vertical">

        <TextView
            style="@style/lightBoldTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/personaldetails"
            android:textAllCaps="false"
            android:layout_marginBottom="16dp"
            android:textColor="@color/date_time_color"
            android:textSize="@dimen/mediumtextSize" />

        <!-- Name -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/nameID"
                style="@style/normalTextStyle"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:padding="5dp"
                android:background="@drawable/rounded_edittext"
                android:hint="@string/hint_name"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="1"
                android:nextFocusForward="@+id/phoneNumberID"
                android:textColorHint="@color/colorTextSecondary"
                android:textSize="@dimen/mediumtextSize" />

        </android.support.design.widget.TextInputLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp">

            <!-- Phone Number -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <EditText
                    android:id="@+id/phoneNumberID"
                    style="@style/normalTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:padding="5dp"
                    android:background="@drawable/rounded_edittext"
                    android:hint="@string/hint_number"
                    android:imeOptions="actionNext"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:nextFocusForward="@+id/pincode"
                    android:textColorHint="@color/colorTextSecondary"
                    android:textSize="@dimen/mediumtextSize" />

            </android.support.design.widget.TextInputLayout>

