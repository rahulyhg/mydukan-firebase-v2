<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- YouTube Fragment -->
    <fragment
        android:id="@+id/fragment_youtube"
        android:name="org.app.mydukan.youtube.YouTubeFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <!-- You could put anything here -->
    <TextView
        android:id="@+id/video_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_youtube"
        android:textColor="@color/black"
        android:fontFamily="serif"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/youtube_activity_fragment_placeholder"
        android:textSize="@dimen/largetextSize" />

</RelativeLayout>